{
  "manifest_version": 3,
  "name": "MyExtension",
  "version": "1.0",
  "description": "Описание вашего расширения",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon128.png"
  },
  "icons": {
    "192": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
    // {
    // "resources": ["oauth2callback.html"],
    // "matches": [
    //   "chrome-extension://jfofphgfbmedpjhgjcgnjjnkdgkkfhok/oauth2callback"
    // ]
    //}
  ]
}
